{
  "name": "encore-platform-tests",
  "version": "1.0.0",
  "description": "Suite completa de pruebas para Encore Platform",
  "private": true,
  "scripts": {
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit": "jest --config jest.config.js --testPathPattern=unit",
    "test:integration": "jest --config jest.config.js --testPathPattern=integration",
    "test:e2e": "playwright test",
    "test:coverage": "jest --config jest.config.js --coverage",
    "test:watch": "jest --config jest.config.js --watch",
    "test:ci": "npm run test:unit:ci && npm run test:integration:ci && npm run test:e2e:ci",
    "test:unit:ci": "jest --config jest.config.js --testPathPattern=unit --ci --coverage --watchAll=false",
    "test:integration:ci": "jest --config jest.config.js --testPathPattern=integration --ci --watchAll=false",
    "test:e2e:ci": "playwright test --ci",
    "test:accessibility": "playwright test --grep accessibility",
    "test:performance": "playwright test --grep performance",
    "test:mobile": "playwright test --grep mobile",
    "test:visual": "playwright test --grep visual",
    "playwright:install": "playwright install",
    "playwright:install-deps": "playwright install-deps",
    "playwright:codegen": "playwright codegen",
    "playwright:debug": "playwright debug",
    "playwright:report": "playwright show-report",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "axios": "^1.6.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1"
  },
  "devDependencies": {
    "@playwright/browser-chromium": "^1.40.0",
    "@playwright/browser-firefox": "^1.40.0",
    "@playwright/browser-webkit": "^1.40.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "axe-playwright": "^1.1.11",
    "babel-jest": "^29.7.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.7",
    "enzyme-to-json": "^3.6.2",
    "eslint": "^8.56.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-playwright": "^0.18.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-html-reporter": "^3.10.2",
    "jest-junit": "^16.0.0",
    "playwright": "^1.40.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "./jest.config.js"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}