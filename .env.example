# ==============================================
# ENCORE - CONFIGURACIÓN DE ENTORNO
# ==============================================
# IMPORTANTE: Copiar este archivo como .env y configurar valores reales
# NO COMMITEAR archivos .env con valores reales

# ==============================================
# CONFIGURACIÓN GENERAL
# ==============================================
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# ==============================================
# BASE DE DATOS
# ==============================================
DATABASE_URL=postgresql://username:password@localhost:5432/encore_db
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# ==============================================
# REDIS CACHE
# ==============================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ==============================================
# AUTENTICACIÓN Y SEGURIDAD
# ==============================================
JWT_SECRET=your-super-secure-jwt-secret-key-here-min-32-chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# ==============================================
# CORS Y SEGURIDAD
# ==============================================
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# SERVICIOS EXTERNOS - MÚSICA
# ==============================================
# YouTube Data API v3
YOUTUBE_API_KEY=your_youtube_api_key_here
YOUTUBE_API_QUOTA_LIMIT=10000

# Spotify Web API
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=http://localhost:3000/callback/spotify

# ==============================================
# PAGOS - STRIPE
# ==============================================
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# ==============================================
# WEBSOCKETS
# ==============================================
SOCKET_IO_CORS_ORIGIN=http://localhost:3000,http://localhost:3001
SOCKET_IO_TRANSPORTS=websocket,polling

# ==============================================
# MICROSERVICIOS - PUERTOS
# ==============================================
AUTH_SERVICE_PORT=3001
MUSIC_SERVICE_PORT=3002
QUEUE_SERVICE_PORT=3003
POINTS_SERVICE_PORT=3004
ANALYTICS_SERVICE_PORT=3005
MENU_SERVICE_PORT=3006

# ==============================================
# MICROSERVICIOS - URLs INTERNAS
# ==============================================
AUTH_SERVICE_URL=http://localhost:3001
MUSIC_SERVICE_URL=http://localhost:3002
QUEUE_SERVICE_URL=http://localhost:3003
POINTS_SERVICE_URL=http://localhost:3004
ANALYTICS_SERVICE_URL=http://localhost:3005
MENU_SERVICE_URL=http://localhost:3006

# ==============================================
# MONITOREO Y LOGS
# ==============================================
SENTRY_DSN=your_sentry_dsn_here
LOG_FILE_PATH=./logs/encore.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# ==============================================
# DESARROLLO Y TESTING
# ==============================================
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/encore_test_db
TEST_REDIS_URL=redis://localhost:6379/1
ENABLE_API_DOCS=true
API_DOCS_PATH=/api/docs

# ==============================================
# PRODUCCIÓN (Solo para referencia)
# ==============================================
# En producción, usar variables de entorno del sistema
# o servicios de gestión de secretos como:
# - AWS Secrets Manager
# - HashiCorp Vault
# - Azure Key Vault
# - Google Secret Manager