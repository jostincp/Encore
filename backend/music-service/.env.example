# Server Configuration
PORT=3002
NODE_ENV=development
SERVICE_NAME=music-service

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=encore_music
DB_USER=encore_user
DB_PASSWORD=your_db_password
DB_SSL=false
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=60000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=1000

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=encore-music-service
JWT_AUDIENCE=encore-users

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200
RATE_LIMIT_SEARCH_MAX_REQUESTS=100
RATE_LIMIT_EXTERNAL_API_MAX_REQUESTS=50
RATE_LIMIT_QUEUE_ADD_MAX_REQUESTS=10
RATE_LIMIT_QUEUE_REMOVE_MAX_REQUESTS=20
RATE_LIMIT_QUEUE_ADMIN_MAX_REQUESTS=100
RATE_LIMIT_CREATE_MAX_REQUESTS=20
RATE_LIMIT_UPDATE_MAX_REQUESTS=50
RATE_LIMIT_DELETE_MAX_REQUESTS=10
RATE_LIMIT_IMPORT_MAX_REQUESTS=30

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_FILE_PATH=logs/music-service.log
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d
LOG_DATE_PATTERN=YYYY-MM-DD

# YouTube API Configuration
YOUTUBE_API_SECRET=your_youtube_api_secret_here
YOUTUBE_API_BASE_URL=https://www.googleapis.com/youtube/v3
YOUTUBE_MAX_RESULTS=25
YOUTUBE_REGION_CODE=US
YOUTUBE_CACHE_TTL=3600
YOUTUBE_SEARCH_CACHE_TTL=1800
YOUTUBE_TRENDING_CACHE_TTL=1800

# Spotify API Configuration
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_API_BASE_URL=https://api.spotify.com/v1
SPOTIFY_TOKEN_URL=https://accounts.spotify.com/api/token
SPOTIFY_MARKET=US
SPOTIFY_CACHE_TTL=3600
SPOTIFY_SEARCH_CACHE_TTL=1800
SPOTIFY_TOKEN_CACHE_TTL=3000

# External Service URLs
AUTH_SERVICE_URL=http://localhost:3001
QUEUE_SERVICE_URL=http://localhost:3003
POINTS_SERVICE_URL=http://localhost:3004
MENU_SERVICE_URL=http://localhost:3005
ANALYTICS_SERVICE_URL=http://localhost:3006

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_RETRIES=3

# Cache Configuration
CACHE_DEFAULT_TTL=3600
CACHE_SONG_SEARCH_TTL=1800
CACHE_POPULAR_SONGS_TTL=900
CACHE_RECENT_SONGS_TTL=300
CACHE_EXTERNAL_API_TTL=3600
CACHE_QUEUE_STATS_TTL=300

# Song Configuration
SONG_MAX_DURATION=600
SONG_MIN_DURATION=30
SONG_DEFAULT_POPULARITY_SCORE=0
SONG_POPULARITY_DECAY_FACTOR=0.95
SONG_SEARCH_MAX_RESULTS=100

# Queue Configuration
QUEUE_MAX_SONGS_PER_USER=3
QUEUE_DEFAULT_PRIORITY_COST=10
QUEUE_MAX_QUEUE_SIZE=100
QUEUE_AUTO_APPROVE=false
QUEUE_COOLDOWN_SECONDS=30

# External API Rate Limits
YOUTUBE_REQUESTS_PER_DAY=10000
YOUTUBE_REQUESTS_PER_MINUTE=100
SPOTIFY_REQUESTS_PER_SECOND=10
SPOTIFY_REQUESTS_PER_MINUTE=600

# Monitoring and Analytics
MONITORING_ENABLED=true
METRICS_COLLECTION_INTERVAL=60000
ERROR_REPORTING_ENABLED=true
PERFORMANCE_MONITORING_ENABLED=true

# Development/Debug Settings
DEBUG_ENABLED=false
DEBUG_EXTERNAL_APIS=false
DEBUG_CACHE=false
DEBUG_DATABASE=false
VERBOSE_LOGGING=false

# Security Settings
API_KEY_HEADER=x-api-key
INTERNAL_API_KEY=your_internal_api_key_here
ENCRYPTION_KEY=your_encryption_key_here
HASH_SALT_ROUNDS=12

# File Upload Configuration (for thumbnails, etc.)
UPLOAD_MAX_FILE_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp
UPLOAD_DESTINATION=uploads/thumbnails

# WebSocket Configuration (for real-time updates)
WS_ENABLED=true
WS_PORT=3012
WS_CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Backup and Recovery
BACKUP_ENABLED=false
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30

# Feature Flags
FEATURE_YOUTUBE_INTEGRATION=true
FEATURE_SPOTIFY_INTEGRATION=true
FEATURE_SONG_RECOMMENDATIONS=true
FEATURE_ADVANCED_SEARCH=true
FEATURE_QUEUE_ANALYTICS=true
FEATURE_AUTO_IMPORT=false

# Deployment Configuration
DEPLOYMENT_ENVIRONMENT=development
CONTAINER_NAME=encore-music-service
HEALTH_CHECK_PATH=/api/health
READINESS_CHECK_PATH=/api/health
LIVENESS_CHECK_PATH=/api/health