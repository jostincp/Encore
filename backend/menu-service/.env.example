# Server Configuration
PORT=3004
HOST=localhost
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://encore_user:password@localhost:5432/encore_menu
DB_HOST=localhost
DB_PORT=5432
DB_NAME=encore
DB_USER=encore_user
DB_PASSWORD=password
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=60000
DB_QUERY_TIMEOUT=30000

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=menu:
REDIS_CONNECT_TIMEOUT=10000
REDIS_COMMAND_TIMEOUT=5000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=encore-menu-service
JWT_AUDIENCE=encore-users

# API Keys and External Services
YOUTUBE_API_KEY=your-youtube-api-key
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# File Upload Configuration
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp
UPLOAD_DEST=uploads/menu
IMAGE_QUALITY=80
IMAGE_MAX_WIDTH=1200
IMAGE_MAX_HEIGHT=800

# Cache Configuration
CACHE_TTL=3600
CACHE_MENU_TTL=1800
CACHE_CATEGORY_TTL=3600
CACHE_STATS_TTL=300
CACHE_ENABLED=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MENU_MODIFY_MAX=20
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false
RATE_LIMIT_SKIP_FAILED_REQUESTS=false

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_MAX_FILES=5
LOG_CONSOLE_ENABLED=true
LOG_JSON_FORMAT=false

# Security Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=true
HELMET_ENABLED=true
TRUST_PROXY=false

# Business Logic Configuration
MENU_MAX_ITEMS_PER_CATEGORY=100
MENU_MAX_CATEGORIES_PER_BAR=50
MENU_ITEM_NAME_MAX_LENGTH=100
MENU_ITEM_DESCRIPTION_MAX_LENGTH=500
MENU_CATEGORY_NAME_MAX_LENGTH=50
MENU_CATEGORY_DESCRIPTION_MAX_LENGTH=200
MENU_MAX_PRICE=999.99
MENU_MIN_PRICE=0.01
MENU_MAX_PREPARATION_TIME=180

# Microservices URLs
AUTH_SERVICE_URL=http://localhost:3001
MUSIC_SERVICE_URL=http://localhost:3002
QUEUE_SERVICE_URL=http://localhost:3003
POINTS_SERVICE_URL=http://localhost:3005
ANALYTICS_SERVICE_URL=http://localhost:3006

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# Monitoring and Metrics
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Development Configuration
DEBUG=menu-service:*
DEV_MOCK_AUTH=false
DEV_SEED_DATA=false
CONTAINER_NAME=encore-menu-service