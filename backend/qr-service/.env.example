# QR Service Environment Variables
# Copy this file to .env and update with your values

# Service Configuration
QR_SERVICE_PORT=3007
NODE_ENV=development

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Frontend Configuration
FRONTEND_URL=http://localhost:3004
CUSTOM_DOMAIN=

# QR Code Configuration
QR_SIZE=256
QR_MARGIN=4
QR_ERROR_CORRECTION_LEVEL=H

# Database Configuration (for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/encore_qr

# Redis Configuration (for caching)
# REDIS_URL=redis://localhost:6379
# REDIS_TTL=3600

# File Storage Configuration
# UPLOAD_DIR=./uploads
# MAX_FILE_SIZE=10MB

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Analytics
ENABLE_ANALYTICS=true
ANALYTICS_ENDPOINT=https://analytics.encore.com/api/events

# Email Notifications (for QR usage reports)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@encore.com

# External Services
WEBHOOK_URL=https://your-webhook-url.com/qr-events
API_BASE_URL=http://localhost:8000

# Development
DEBUG=qr-service:*
