# Encore Backend Shared Environment
NODE_ENV=development
SERVICE_NAME=queue-service

# Server Port (queue-service)
PORT=3003
QUEUE_SERVICE_PORT=3003
QUEUE_SERVICE_URL=http://localhost:3003

# Database (placeholder for local dev)
DATABASE_URL=postgres://encore_user:encore_pass@localhost:5432/encore_dev
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# JWT
JWT_SECRET=encore_local_development_secret_key_with_min_length_32_chars_123456
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Redis (fallback handled if unavailable)
REDIS_URL=redis://localhost:6380
REDIS_DB=0

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3003
CORS_CREDENTIALS=true

# Socket.IO
SOCKET_IO_CORS_ORIGIN=http://localhost:3000
MUSIC_SERVICE_PORT=3002
QUEUE_SERVICE_PORT=3003
POINTS_SERVICE_PORT=3004
ANALYTICS_SERVICE_PORT=3005
MENU_SERVICE_PORT=3006
AUTH_SERVICE_PORT=3001

# Database Config Fixed
DB_PORT=5433
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=encore_db
DATABASE_URL=postgres://postgres:password@localhost:5433/encore_db

# Stripe Config
STRIPE_SECRET_KEY=sk_test_dummy
STRIPE_PUBLISHABLE_KEY=pk_test_dummy
STRIPE_WEBHOOK_SECRET=whsec_dummy

# YouTube API (REQUERIDO para búsqueda de canciones)
# Obtén tu API key en: https://console.cloud.google.com/
# 1. Crea un proyecto
# 2. Habilita "YouTube Data API v3"
# 3. Crea credenciales (API Key)
# IMPORTANTE: Reemplaza con tu API key real o usa YOUTUBE_USE_MOCK=true para datos de prueba
YOUTUBE_API_KEY=your_youtube_api_key_here
YOUTUBE_USE_MOCK=true
