# Encore Backend Environment Variables - EXAMPLE
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/encore
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis Configuration
REDIS_URL=redis://localhost:6380
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long-for-security
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Bcrypt
BCRYPT_ROUNDS=12

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003,http://localhost:3004,http://localhost:3005,http://localhost:3006
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# External APIs
YOUTUBE_API_KEY=your_youtube_api_key_here
YOUTUBE_API_QUOTA_LIMIT=10000

SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=http://localhost:3002/api/spotify/callback

STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# Service Ports
AUTH_SERVICE_PORT=3001
MUSIC_SERVICE_PORT=3002
QUEUE_SERVICE_PORT=3003
POINTS_SERVICE_PORT=3004
ANALYTICS_SERVICE_PORT=3005
MENU_SERVICE_PORT=3006

# Logging
LOG_LEVEL=debug
NODE_ENV=development

# API Documentation
ENABLE_API_DOCS=true
API_DOCS_PATH=/api/docs
